@page
@model CollagePageModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<meta name="viewport" content="width=device-width" />
<title>Create Collage</title>
<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@latest/css/pico.min.css"/>

<style>
    form {
        display: grid;
        grid-template-columns: auto 1fr;
        row-gap: 1rem;
        width: clamp(320px, 90vw, 1024px);
        margin: 0 auto;
    }

    h1 {
        text-align: center;
    }

    textarea {
        resize: none;
        height: 50vh;
    }

    .main {
        margin: 2rem;
        padding: 2rem;
    }

    .toolbar {
        display: flex;
        flex-direction: row;
        gap: 1rem;
    }

    .col1-2 {
        grid-column: 1 / 3;
    }

</style>

<div class="main">

<h1>Create Collage</h1>

<form method="post">
    <div class="form-group col1-2">
        <h3>Title</h3>
        <input asp-for="Collage!.Title" placeholder="Title"/>
    </div>
    <div class="form-group col1-2">
        <h3>Note</h3>
        <textarea asp-for="Collage!.Note" placeholder="Note"></textarea>
    </div>
    <div class="toolbar col1-2">
        <input type="submit" value="Create New" class="btn" />
        <input type="button" value="Cancel" class="btn secondary" onclick="location='./index'"/>
    </div>
</form>
</div>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>