@page "{id}"
@model EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@latest/css/pico.min.css" />

<style>
    .col1-2 {
        grid-column: 1 / 3;
    }

    h1,
    h2 {
        text-align: center;
    }

    form {
        padding: 10px;
        margin: 10px;
    }

    form>input,
    form textarea {
        color: green;
        border-style: solid;
        resize: none;
        padding: 0.5rem;
    }

    form>p {
        overflow: hidden;
        overflow-y: auto;
        max-height: 50vh;
    }

    .toolbar {
        display: flex;
        gap: 1rem;
    }
</style>


<h1>Edit Collage</h1>

<h2>Collage Title Is @Model.Collage.Title</h2>

<div class="container">
    <div class="card">
        <form>
            <div class="form-group col1-2">
                <label for="">Title</label>
                <input class="form-control" placeholder="Title" value="@Model.Collage.Title" />
            </div>
            <div class="form-group col1-2">
                <label for="">Note</label>
                <textarea class="form-control" placeholder="Note" value="@Model.Collage.Note"></textarea>
            </div>
            <div class="form-group col1-2">
                <label for="">Note</label>
                <textarea class="form-control" placeholder="Data" value="@Model.Collage.Data"></textarea>
            </div>
            <div class="toolbar">
                <input type="submit" class="btn" value="Save Edits" />
                <input type="button" class="btn secondary" value="Cancel" onclick="location='../index'" />
            </div>
        </form>
    </div>
</div>

<script src="/_framework/aspnetcore-browser-refresh.js"></script>