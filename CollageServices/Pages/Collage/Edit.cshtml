@page "{id}"
@model EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<title>Editing @Model.Collage.Title</title>

<link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@latest/css/pico.min.css" />

<style>
    .col1-2 {
        grid-column: 1 / 3;
    }

    h1,
    h2 {
        text-align: center;
    }

    form {
        padding: 10px;
        margin: 10px;
    }

    textarea {
        resize: none;
    }

    .note {
        height: 50vh;
    }

    form>p {
        overflow: hidden;
        overflow-y: auto;
        max-height: 50vh;
    }

    .toolbar {
        display: flex;
        gap: 1rem;
    }
</style>


<main>
<h1>Editing @Model.Collage.Title</h1>

<div class="container">
    <div class="card">
        <form method="post">
            <div class="form-group col1-2">
                <label for="Title">Title</label>
                <input id="Title" class="form-control" placeholder="Title" value="@Model.Collage.Title" />
            </div>
            <div class="form-group col1-2">
                <label for="Note">Note</label>
                <textarea id="Note" class="form-control note" placeholder="Note" value="@Model.Collage.Note"></textarea>
            </div>
            <div class="form-group col1-2">
                <label for="Data">Data</label>
                <textarea id="Data" readonly class="form-control" placeholder="Data (created using another tool)" value="@Model.Collage.Data"></textarea>
            </div>
            <div class="toolbar">
                <input type="submit" class="btn" value="Save Edits" />
                <input type="button" class="btn secondary" value="Cancel" onclick="location='../index'" />
            </div>
        </form>
    </div>
</div>
</main>

<script src="/_framework/aspnetcore-browser-refresh.js"></script>